// N-Modular Redundancy
Process NMR {
    v: INT; //0..11
    s:INT; //0..1    0=normal, 1=faulty

    Initial : v==0 && s==0;

    // environment input

    [i0] true -> v=0;
    [i1] true -> v=11;

    // vote

    [v0] v<=5 -> v=v;
    [v1] v>5 -> v=v;

    // tick

    [tick] <1> s==0 && v<11->0.99: v=v
                    ++ 0.01: s=1;
    [tick] <1> s==1 || v==11-> v=v;

    // faults

    [fault1] faulty s==1 && v<11-> s=0, v=v+1;
    [fault1] faulty s==1 && v>=11-> s=0, v=10;
    [fault2] faulty s==1 && v>0-> s=0, v=v-1;
    [fault2] faulty s==1 && v<=0-> s=0, v=1;

}

Main() {
    m : NMR ;
    run m() ;
}
